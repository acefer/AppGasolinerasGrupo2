<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_precio_gasolina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F9"
    android:backgroundTint="#FBF9F9"
    android:orientation="vertical"
    android:layout_weight="100"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Views.MainActivity">


    <LinearLayout
        android:id="@+id/operacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:background="#FBF9F9"
        android:backgroundTint="#FBF9F9"
        android:paddingBottom="20dp">


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/spinner"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#547980"
            android:text="Filtrar"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#547980"
            android:text="Reset"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFiltros"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="95">

        <ListView
            android:id="@+id/listViewGasolineras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="500dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#547980"
        app:colorAccent="#547980"
        app:srcCompat="@android:drawable/ic_input_add" />
</LinearLayout>







